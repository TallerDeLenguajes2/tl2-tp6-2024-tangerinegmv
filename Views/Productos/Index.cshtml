@{
    ViewData["Title"] = "Productos";
}


@model List<Tienda.Productos> 

<div class="text-center">
    <h1 class="display-4">Listado de productos</h1>
</div>
<table class="table table-primary table-striped">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var producto in Model)
    {
        <tr>
            <th scope="row">@producto.IdProducto</th>
            <td>@producto.Descripcion</td>
            <td>@producto.Precio</td>
            <td><button type="button" class="btn btn-primary"><a class="nav-link text-light" asp-area="" asp-controller="Productos" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto">Modificar</a></button></td>
            <td><button type="button" class="btn btn-danger"><a class="nav-link text-light" asp-area="" asp-controller="Productos" asp-action="EliminarProducto" asp-route-id="@producto.IdProducto">Eliminar</a></button></td>
        </tr>
    }
  </tbody>
</table>
<div class="text-center">
    <button type="button" class="btn btn-success"><a   class="nav-link text-light" asp-area="" asp-controller="Productos" asp-action="CrearProducto">Agregar producto a la lista</a></button>
</div>